.securityWrap{
  display: flex;
  justify-content: center;
  position: relative;
}

.security-use{
  width: 92%;
  background-color: white;
  height: 226rpx;
  margin-top: 24rpx;
}

.daishiyong{
  color: #808080
}

.security-top{
  width: 98%;
  height: 162rpx;
  display: flex;
  border-bottom: 1px dashed #E0E0E0;
  margin: -3rpx 10rpx;
}

.security-top-left{
  width: 73%;
  height: 162rpx;
}

.security-money{
  display: block;
  height: 162rpx;
  line-height: 162rpx;
  font-size: 40rpx;
  color: #FC5E2D;
  text-indent: 28rpx;
}

.security-money-se{
  font-size: 76rpx;
}

.security-available{
  color: #808080;
  font-size: 26rpx;
}

.security-top-right{
  width: 29%;
  height: 110rpx;
  text-align: right;
  padding-top: 50rpx;
}

.my-immediateUse{
  width: 156rpx;
  height: 56rpx;
  font-size: 28rpx;
  color: #FC5E2D;
  border: 1px solid #FC5E2D;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  text-align: center;
  line-height: 56rpx;
}
.istick{
  color: #DB9C34;
  border:1rpx solid #DB9C34;
}
.deadline-time{
  color: #B1B1B1;
  font-size: 24rpx;
  display: flex;
  height: 56rpx;
  justify-content: space-between;
  padding: 0rpx 40rpx;
  align-items: center;
  letter-spacing: 1px;
}

.isGray {
  color: #B1B1B1;
  border-color: #B1B1B1;
}
.isnoGray{
  color: #DB9C34;
}
.contick view{
  padding-left: 30rpx;
  width: 70%; 
  height: 81rpx;
  line-height: 81rpx;
}
.contick view:nth-child(1){
  
  font-size: 46rpx;
  line-height:100rpx;
}
.contick view:nth-child(2){
  color: #808080;
  font-size: 24rpx;
}
.actsku{
  color:#FC5E2D;
}
