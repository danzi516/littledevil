page{
  width: 100%;
  height: 100%;
  background-color: #EBEBEB;
}

.moneyTop{
  width: 100%;
  height: 204rpx;
  background-color: #FC5E2D;
  line-height: 83rpx;
  letter-spacing: 1px;
}

.moneyText{
  font-size: 24rpx;
  color: #EBEBEB;
  text-indent: 27rpx;
  display: block;
} 

.moneyNumber{
  font-size: 50rpx;
  color: #EBEBEB;
  text-indent: 21rpx;
}

.moneyNumber text{
  font-size: 88rpx;
}

.moneyCenter{
  width: 100%;
  height: 146rpx;
  background-color: #fff;
}

.moneyCenter view:nth-child(2){
  border-right: 1px solid #EBEBEB;
  border-left: 1px solid #EBEBEB;
}

.moneyCenter{
  display: flex;
  justify-content: space-around;
}

.moneySonImg{
  width: 70rpx;
  height: 70rpx;
}

.moneySon text{
  padding-top: 14rpx;
}

.moneySon{
  width: 33.3%;
  height: 146rpx;
  display: flex;
  flex-direction:column-reverse;
  text-align: center;
  font-size: 24rpx;
  color: #555555;
  align-items: center;
  justify-content: center;
}