/* pages/citySelect/citySelect.wxss */
page{
  background: #f4f4f4;
}
.header{
  height: 80rpx;
  background: #fc5e2d;
  color:#fff;
  padding:10rpx 30rpx;
}
.header input{
  background: #fff;
  color:#666;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 8rpx;
}
.loca_content{
  padding:20rpx;
}
.title{
  padding:20rpx 0;
  font-size: 30rpx;
  color:#666;
}
.dqtitle{
  padding:20rpx;
  font-size: 30rpx;
  color:#666;
}
.current-site{
  display: flex;
  justify-content:space-between;
  line-height: 50rpx;
  background: #fff;
  padding:20rpx;
  color:#33caff;
  font-size: 32rpx;
}
.result-address{
  padding: 20rpx;
  background: #fff;
  line-height: 50rpx;
  color:#666;
  border-bottom:2rpx solid rgba(0,0,0,0.2);
}
.addressTitle{
  font-size: 36rpx;
}
.addressDetail{
  font-size:30rpx;
}
.cityname{
  height: 50rpx; 
  line-height: 20rpx;
  font-size:30rpx;
  color:#b1b1b1;
  float:left;
  margin: 0 25rpx 25rpx 0; 
}
.isopen{
  color: blue
