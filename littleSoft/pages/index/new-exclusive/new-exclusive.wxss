  height: 620rpx;
}

.clickBox {
  height: 90rpx;
  width: 100%;
  padding: 0 28rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 30rpx;
}

.clickto_get {
  height: 100%;
  width: 100%;
  background-color: #FAD703;
  border-radius: 8rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  letter-spacing: 10rpx;
}