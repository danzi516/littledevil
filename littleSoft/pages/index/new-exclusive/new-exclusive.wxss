page {
  height: 100%;
  background-color: #FC5E2D;
}
.new_exclusive {
  width: 100%;
  height: 100%;
}

.newE_header {
  width: 100%;
  height: 383rpx;
}

.newE_header image {
  width: 100%;
  height: 383rpx;
}

.newE_rule {
  font-size: 26rpx;
  color: #fff;
}

.newE_title {
  width: 100%;
  text-align: center;
}

.newE_title text {
  display: inline-block;
  margin: 0 40rpx;
  letter-spacing: 6rpx;
}

.newE_content {
  display: block;
  padding: 0 28rpx 0 47rpx;
  line-height: 50rpx; 
  letter-spacing: 6rpx;
