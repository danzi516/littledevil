.evaluate-maximum {
  background-color: white;
  padding: 0rpx 30rpx;
}
.evaluate-maximum::first-child {
  padding-top: 30rpx;
}
.evaluate-wrap {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.evaluateImages {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
  border: 1px solid #f8f8f8;
}
.evaluateText {
  color: #191919;
  font-size: 28rpx;
  vertical-align: middle;
}
.evaluaterightTx {
  color: #808080;
  font-size: 24rpx;
  vertical-align: middle;
  padding-right: 8rpx;
}
.evaluateright {
  width: 34rpx;
  height: 34rpx;
}
.introduce-details{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  color: #555555;
  font-size: 28rpx;
  padding-left: 74rpx;
}
.carry-out-data{
  height: 50rpx;
  text-align: right;
  line-height: 50rpx;
  color: #B1B1B1;
  font-size: 24rpx;
}

